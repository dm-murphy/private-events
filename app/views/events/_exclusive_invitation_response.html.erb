<% invite = current_user.invitations.find_by(event_id: @event.id) %>
<% if invite.nil? %>
  <%= "This is an exclusive event. You must be privately invited to attend." %>
<% elsif invite.acceptance == true %>
  <%= render 'remove_invitation_form' %>
<% elsif current_user.attended_events.include? @event %>
  <%= render 'exclusive_invitation_form' %>
<% else %>
    Something went wrong. Check back later.
<% end %>