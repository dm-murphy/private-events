<h1>Check this out</h1>
<div>
  <h2><%= @event.title %></h2>
  <h3><%= @event.date.strftime("%A, %B %-d, %Y") %></h3>
  <p><%= @event.description %></p>
  <h3>Created by <%= link_to @event.creator.email, user_path(@event.creator) %></h3>
</div>
<div>
  <% if @event.exclusive == true %>
    <%= render 'exclusive_invitation_process' %>
  <% else %>
    <%= render 'public_invitation_process' %>
  <% end %>
</div>

<% if user_signed_in? && current_user == @event.creator && @event.exclusive == true %>
<div>
  <p>Invite Guests to Your Exclusive Event:</p>
  <%= render 'guest_list_form' %>
</div>
<li>Users Invited to this event: 
  <% @event.attendees.each do |attendee| %>
    <%= attendee.email %>
  <% end %>
</li>
<% end %>

<li>Users Attending this Event:
  <% @event.attendees.each do |attendee| %>
    <% invite = attendee.invitations.find_by(event_id: @event.id) %>
    <% if invite.acceptance == true %>
      <%= attendee.email %>
    <% end %>
  <% end %>
</li>

<% if @event.creator == current_user %>
  <li>Edit this Event:
  <%= link_to 'Edit', edit_event_path(@event) %>
<% end %>

</li>
<% if @event.creator == current_user %>
  <li>Delete this Event:
  <%= link_to 'Destroy', event_path(@event), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this event?" } %>
  </li>
<% end %>

