<h3 class="user-header">Upcoming Events</h3>
<% upcoming_events = @user.attended_events.where("date >= ?", Time.current) %>
<% sorted_upcoming_events = upcoming_events.sort_by { |event| event['date'] } %>
<% sorted_upcoming_events.each do |event| %>
  <div class="user-upcoming-container">
    <ul class="user-event-list">
      <li class="user-event-title"><%= event.title %></li>
      <li class="user-event-date"><%= event.date.strftime("%B %-d %Y") %></li>
      <br>
      <button class="user-details-button"><%= link_to "Details", event_path(event.id) %>
    </ul>
  </div>
<% end %>